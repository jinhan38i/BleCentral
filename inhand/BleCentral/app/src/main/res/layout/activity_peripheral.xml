<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.bleCentral.PeripheralActivity">

    <Button
        android:id="@+id/bt_start_advertising"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Start"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt_stop_advertising"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Stop"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt_peripheral_disconnect"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="연결 해제"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_start_app"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Start app"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_start_app_direct"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Start app direct"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_peripheral_write"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Write"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listView_peripheral_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</LinearLayout>